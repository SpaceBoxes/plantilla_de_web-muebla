---
//layouts
import Layout from "../layouts/Layout.astro";
//icons
import Couch from "../components/icons/Couch.astro";
import Plane from "../components/icons/Plane.astro";
//menu
import SimpleMenu from "../components/menus/SimpleMenu.astro";
//asrticles
import SimpleArticle from "../components/cards/SimpleArticle.astro";
//footer
import SimpleFooter from "../components/footers/SimpleFooter.astro";
---

<Layout title="Muebla">
  <section class="bg-blue-800 w-full">
    <header class="w-full bg-[url('public/img/web_banner.jpg')] bg-left-bottom">
      <section
        class="flex justify-center items-center flex-wrap pt-14 bg-[--bg-effect]"
      >
        <SimpleMenu title="Muebla">
          <Couch w="4vw" c="fill-blue-100" slot="icon" />
        </SimpleMenu>
        <section
          class="flex flex-wrap justify-center items-center py-80 w-8/12"
        >
          <h1 class="text-7xl text-center text-blue-100">
            Todo para interiores disponibles en nuestra tienda
          </h1>
          <h2
            class="text-2xl text-center text-blue-800 mt-10 py-3 px-10 rounded-md font-semibold bg-brown-500"
          >
            Los mejores
          </h2>
        </section>
      </section>
    </header>
    <main class="flex flex-wrap justify-center items-center p-20">
      <h1 class="text-7xl text-blue-100 font-medium w-full mt-20 mb-10">
        Muebles destacados
      </h1>
      <section class="flex flex-wrap justify-between items-center w-11/12">
        <SimpleArticle
          title="Sofá verde elegante"
